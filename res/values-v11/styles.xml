<resources>

  <style name="SeekBarAppTheme" parent="android:Widget.Holo.SeekBar">
      <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
      <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
      <item name="android:thumb">@drawable/scrubber_control_selector_holo_dark</item>
  </style>
    
  
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>
    
	<style name="Widget.AppBaseTheme.ListView" parent="android:Widget.ListView">
	    <item name="android:overScrollMode">never</item>
	</style>
	
	<style name="Widget.AppBaseTheme.ScrollView" parent="android:Widget.ScrollView">
	    <item name="android:overScrollMode">never</item>
	</style>

</resources>